<Window
    x:Class="MTerminalWPFDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MTerminalWPFDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    ShowActivated="False"
    WindowState="Minimized"
    mc:Ignorable="d">
    <StackPanel>
        <Button Click="ButtonShow_Click" Content="Show Terminal" />
        <Button Click="ButtonHide_Click" Content="Hide Terminal" />
    </StackPanel>
</Window>
